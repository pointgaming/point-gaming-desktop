<Window x:Class="PointGaming.Desktop.MessageDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MessageDialog" Height="200" Width="350" 
        WindowStartupLocation="CenterOwner" Padding="5" ResizeMode="CanResizeWithGrip" WindowStyle="ToolWindow" Icon="/PointGaming.Desktop;component/PointGaming.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBox Grid.Row="0" HorizontalAlignment="Stretch" Name="textBoxMessage" VerticalAlignment="Stretch" IsReadOnly="True" VerticalScrollBarVisibility="Auto" TextWrapping="Wrap" BorderThickness="0" Margin="10"/>
        <Button Grid.Row="1" Content="OK" Height="23" HorizontalAlignment="Center" Name="buttonOk" VerticalAlignment="Top" Width="75" Margin="10" Click="buttonOk_Click" />
    </Grid>
</Window>
