<Window x:Class="PointGaming.Desktop.HomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:HomeTab="clr-namespace:PointGaming.Desktop.HomeTab"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        Title="Point Gaming" Height="350" Width="525"
        Loaded="Window_Loaded" Closing="Window_Closing"
        Icon="/PointGaming.Desktop;component/PointGaming.ico"
        DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <Grid>
        <tb:TaskbarIcon Name="taskbarIcon" IconSource="/PointGaming.Desktop;component/PointGaming.ico" 
                        TrayMouseDoubleClick="TaskbarIcon_TrayMouseDoubleClick"
                        ToolTipText="Poing Gaming" Visibility="Collapsed" />
        
        <TabControl HorizontalAlignment="Stretch" Name="tabControlMain" VerticalAlignment="Stretch">
        </TabControl>
    </Grid>
</Window>
