<UserControl x:Class="PointGaming.Desktop.HomeTab.LobbyChoice"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="400"
             xmlns:HomeTab="clr-namespace:PointGaming.Desktop.HomeTab"
             DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="..\Dictionary1.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Button Name="button1" Style="{StaticResource ImageButton}" 
            HomeTab:ButtonProperties.Image="{Binding Image, FallbackValue='/PointGaming.Desktop;component/Resources/PointGamingLogo256x256.png'}"
            HorizontalContentAlignment="Left" Focusable="False">
        <Button.Content>
            <TextBlock FontWeight="Medium" FontSize="{Binding DisplayHeight, FallbackValue=12}" Text="{Binding DisplayName, FallbackValue='Hello world!'}" VerticalAlignment="Stretch" Margin="5,0,0,0" />
        </Button.Content>
    </Button>
</UserControl>
