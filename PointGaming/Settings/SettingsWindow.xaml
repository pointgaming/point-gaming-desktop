<Window x:Class="PointGaming.Settings.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:pgs="clr-namespace:PointGaming.Settings"
        Title="SettingsWindow" Height="500" Width="400" Closing="Window_Closing">
    <Grid>
        <TabControl Name="tabControlMain" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" >
            <TabItem Header="Voice" Name="tabVoice">
                <pgs:VoiceTab  />
            </TabItem>
            <TabItem Header="About" Name="tabAbout">
                <pgs:AboutTab  />
            </TabItem>
        </TabControl>
    </Grid>
</Window>
