<Window x:Class="PointGaming.Lobby.GameInfoDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Name="gameInfoDialog"
        Title="GameInfoDialog" Height="400" Width="300">
    <Grid>
        <Image Height="48" Width="48" HorizontalAlignment="Left" Margin="20,10,0,311" Stretch="Fill" VerticalAlignment="Center" Source="{Binding ElementName=gameInfoDialog, Path=Avatar}" />
        <TextBlock Height="18" Margin="84,27,0,324" HorizontalAlignment="Left" Name="hyperLinkInfo" VerticalAlignment="Center" Width="198">
            <Hyperlink>http://pointgaming.com</Hyperlink>
        </TextBlock>
        <TextBlock Width="198" Height="50" Margin="84,59,0,260"  TextWrapping="Wrap" Text="{Binding ElementName=gameInfoDialog, Path=TakeOverAmount}" HorizontalAlignment="Left" x:Name="textBlockTakeOverAmount" VerticalAlignment="Center" />
        <Button Content="OK" Height="23" HorizontalAlignment="Center" Name="buttonOk" VerticalAlignment="Bottom" Width="76" Click="buttonOk_Click" Margin="84,0,82,10" />
    </Grid>
</Window>
