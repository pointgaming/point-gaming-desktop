<Window x:Class="PointGaming.HomeTab.InputValueDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="InputValueDialog" Height="200" Width="500">
    <Grid>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="100,40,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="300" RenderTransformOrigin="0.503,-1.304" TextAlignment="Right" Name="ValueField"/>
        <Button Content="Accept" HorizontalAlignment="Left" Margin="100,100,0,0" VerticalAlignment="Top" Width="100" RenderTransformOrigin="0.267,0.318" Name="OkButton" Click="OkButton_Click"/>
        <Button Content="Cancel" HorizontalAlignment="Left" Margin="300,100,0,0" VerticalAlignment="Top" Width="100" Name="CancelButton" Click="CancelButton_Click"/>

    </Grid>
</Window>
